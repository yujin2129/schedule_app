<div class="container">
  <h3>スケジュール新規追加</h3>

  <%= form_with model: @schedule do |f| %>

    <table class="table table-hover table-responsive">
      <tr>
        <th>
        <%= f.label :title ,"タイトル" %>
        <% if @schedule.errors.include?(:title) %>
          <p class="error_message"><%= @schedule.errors.full_messages_for(:title).first %>
        <% end %>
        </th>
        <td><%= f.text_field :title %></td>
      </tr>
      <tr>
        <th>
        <%= f.label :start_date ,"開始日" %>
        <% if @schedule.errors.include?(:start_date) %>
          <p class="error_message"><%= @schedule.errors.full_messages_for(:start_date).first %>
        <% end %>
        </th>
        <td><%= f.date_field :start_date %></td>
      </tr>
      <tr>
        <th>
        <%= f.label :end_date ,"終了日" %>
        <% if @schedule.errors.include?(:end_date) %>
          <p class="error_message"><%= @schedule.errors.full_messages_for(:end_date).first %>
        <% end %>
        </th>
        <td><%= f.date_field :end_date %></td>
      </tr>
  
      <tr>
        <th><%= f.label :is_allday ,"終日" %></th>
        <td><%= f.check_box :is_allday %></td>
      </tr>
  
      <tr>
        <th>
        <%= f.label :memo ,"スケジュールメモ" %>
        <% if @schedule.errors.include?(:memo) %>
          <p class="error_message"><%= @schedule.errors.full_messages_for(:memo).first %>
        <% end %>
        </th>
        <td><%= f.text_area :memo %></td>
      </tr>
    </table>
  
    <div>
      <%= f.submit "追加", class:"btn btn-primary" %>
      <%= link_to "キャンセル", :schedules, class:"btn btn-secondary" %>
    </div>
  <% end %>
</div>
